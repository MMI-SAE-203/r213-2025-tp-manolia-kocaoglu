---
const {...offre} = Astro.props;
---
<div class="max-w-xl mx-auto mt-6">
    <div class="bg-blue-200 shadow-lg rounded-2xl overflow-hidden">
        <img src={offre.img} alt={offre.nomMaison} class="w-full h-48 object-cover"/>
        <div class="p-6">
            <h1 class="text-2xl font-bold text-white mb-2">{offre.nomMaison}</h1>
            <p class="text-white mb-4">{offre.adresse}</p>
            <div class="flex justify-between items-center">
                <span class="text-xl font-semibold text-white">{offre.prix}</span>
                <a href={`/offres/${offre.id}`} class="bg-white text-blue-500 hover:bg-blue-500 hover:text-white font-semibold py-2 px-4 rounded">Voir plus</a>
            </div>
        </div>
    </div>
</div>
