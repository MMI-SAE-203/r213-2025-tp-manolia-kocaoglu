---
import { bySurface } from "../../../backend.mjs";
import Base from '../../../layouts/Base.astro';
import Card from "../../../components/Card.astro";


const { surface } = Astro.params;
const offres = await bySurface(surface);
if(!offres){
   return Astro.redirect('/offres');
}

---

<Base>
    {offres.map((offre) => (
        <Card {...offre} />
    ))
    }
</Base>